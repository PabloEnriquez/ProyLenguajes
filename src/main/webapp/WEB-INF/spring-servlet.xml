<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
 	http://www.springframework.org/schema/mvc
 	http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
 	http://www.springframework.org/schema/context
 	http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<context:component-scan base-package="com.droolsRestful.controller" />

	<bean id="droolsInitializer" class="com.droolsRestful.droolsUtilities.DroolsInitializer"/>
	<bean id="droolsRules" class="com.droolsRestful.droolsUtilities.DroolsRules"/>
	<bean id="userService" class="com.trucutru.endpoint.impl.UserService"/>
	<bean id="padreService" class="com.trucutru.endpoint.impl.PadreService"/>
	<bean id="estudService" class="com.trucutru.endpoint.impl.StudentService"/>

	<mvc:annotation-driven />


</beans>